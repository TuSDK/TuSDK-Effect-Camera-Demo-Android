<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="10dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/lsq_plastic_layer"
        android:layout_alignParentLeft="true"
        android:layout_width="60dp"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/lsq_beauty_level_text"
            android:layout_margin="@dimen/lsq__space_5"
            android:layout_centerInParent="true"
            android:text="1"
            android:textColor="@color/lsq_color_white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/lsq_beauty_level_image"
            android:src="@drawable/lsq_ic_parameter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

    </FrameLayout>

    <CheckedTextView
        android:textAlignment="center"
        android:text="1111"
        android:gravity="center"
        android:layout_alignBottom="@id/lsq_plastic_layer"
        android:id="@+id/lsq_beauty_name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="@color/lsq_beauty_name_selector"
        android:textSize="@dimen/lsq_font_size_20"
        android:visibility="visible"/>

    <View
        android:layout_centerVertical="true"
        android:background="@drawable/lsq_circle_point"
        android:visibility="visible"
        android:id="@+id/lsq_plastic_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_toRightOf="@id/lsq_plastic_layer"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp" />

</RelativeLayout>